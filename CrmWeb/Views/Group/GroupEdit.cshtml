@model CrmWeb.Models.GroupEditViewModel
@{
    ViewBag.Title = "更新医生信息";
}

<aside class="right-side">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">

        <!-- Small boxes (Stat box) -->
        <!-- /.row -->
        <!-- top row -->
        <div class="row">
            <div class="col-xs-12 connectedSortable">

            </div><!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">@ViewBag.Title</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                  @using (Html.BeginForm("GroupUpdate", "Group", FormMethod.Post))
    {     
                      @Html.HiddenFor(model=>model.GroupId)
                     
                       @Html.ValidationSummary(true)
                      <div class="box-body">
                            <div class="form-group">

                                @Html.LabelFor(model => model.GroupName)  @Html.ValidationMessageFor(model => model.GroupName)
                                @Html.TextBoxFor(model => model.GroupName, new { @class = "form-control" })
                              
                               
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.GroupInfo)  @Html.ValidationMessageFor(model => model.GroupInfo)
                                @Html.TextAreaFor(model => model.GroupInfo, new { @class = "form-control" })
                            </div>

                           


                           


                           
                        </div><!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                  }
                </div><!-- /.box -->



            </div><!--/.col (left) -->
            <!-- right column -->
            <!--/.col (right) -->
        </div><!-- /.row (main row) -->

    </section><!-- /.content -->
</aside>