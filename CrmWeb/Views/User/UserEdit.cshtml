@model CrmWeb.Models.GuahaoEditViewModel
@{
    ViewBag.Title = "挂号编辑";
}

<link href="/umeditor/themes/default/css/umeditor.css" type="text/css" rel="stylesheet">

<script type="text/javascript" charset="utf-8" src="/umeditor/umeditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="/umeditor/umeditor.min.js"></script>
<script type="text/javascript" src="/umeditor/lang/zh-cn/zh-cn.js"></script>

<aside class="right-side">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">

        <!-- Small boxes (Stat box) -->
        <!-- /.row -->
        <!-- top row -->
        <div class="row">
            <div class="col-xs-12 connectedSortable">

            </div><!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">@ViewBag.Title</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                  @using (Html.BeginForm("GuahaoUpdate", "Guahao", FormMethod.Post))
    {     
                      @Html.HiddenFor(model=>model.GuahaoId)
                       @Html.ValidationSummary(true)
                      <div class="box-body">
                            <div class="form-group">

                                @Html.LabelFor(model => model.GuahaoName)  @Html.ValidationMessageFor(model => model.GuahaoName)
                                @Html.TextBoxFor(model => model.GuahaoName, new { @class = "form-control" })
                              
                               
                            </div>
                          <div class="form-group">

                              @Html.LabelFor(model => model.GuahaoTime)  @Html.ValidationMessageFor(model => model.GuahaoTime)
                              @Html.EditorFor(model => model.GuahaoTime, new { @class = "form-control" })


                          </div>
                          <div class="form-group">

                              @Html.LabelFor(model => model.GuahaoTel)  @Html.ValidationMessageFor(model => model.GuahaoTel)
                              @Html.EditorFor(model => model.GuahaoTel, new { @class = "form-control" })


                          </div>


                          <div class="form-group">

                              @Html.LabelFor(model => model.GuahaoInfo)  @Html.ValidationMessageFor(model => model.GuahaoInfo)
                              @Html.TextAreaFor(model => model.GuahaoInfo, new { @class = "form-control" })


                          </div>

                           
                         
                   
                       
                           
                        

                           
                        </div><!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">立刻保存</button>
                        </div>
                  }
                </div><!-- /.box -->



            </div><!--/.col (left) -->
            <!-- right column -->
            <!--/.col (right) -->
        </div><!-- /.row (main row) -->

    </section><!-- /.content -->
</aside>

<script src="/js/ajaxfileupload.js"></script>

<script type="text/javascript">
    //实例化编辑器
    var um = UM.getEditor('myEditor');

    
</script>
