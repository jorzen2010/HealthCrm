@{
    ViewBag.Title = "客户列表";
}

<link href="/css/page.css" rel="stylesheet" type="text/css" />
<link href="/css/jquery-confirm.css" rel="stylesheet" type="text/css">

<aside class="right-side">
    <!-- Content Header (Page header) -->
    

    <!-- Main content -->
    <section class="content">
   
        <!-- Small boxes (Stat box) -->
        <!-- /.row -->
        <!-- top row -->
        <div class="row">
            <div class="col-xs-12 connectedSortable">

            </div><!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">@ViewBag.Title <small>共 @ViewBag.RecordCount 条记录</small></h3>
                    
                        <div class="box-tools pull-right">


                            <a href="@Url.Action("UserAdd", "User")" class="btn btn-sm btn-primary" style="color:#ffffff"><i class="fa fa-plus"></i> 新增客户</a>


                        </div>
                       
                    </div><!-- /.box-header -->
                   
                    <h4>
                        状态类型：
                      
                        <a href="/Guahao/GuahaoIndex?status=0"> <button class="btn btn-sm btn-primary">全部</button></a>
                        <a href="/Guahao/GuahaoIndex?status=1">  <button class="btn btn-sm btn-warning">孕妇</button></a>
                        <a href="/Guahao/GuahaoIndex?status=2">  <button class="btn btn-sm btn-info">儿童</button></a>
                        <a href="/Guahao/GuahaoIndex?status=3">  <button class="btn btn-sm btn-danger">高血压</button></a>
                        <a href="/Guahao/GuahaoIndex?status=3">  <button class="btn btn-sm btn-danger">糖尿病</button></a>
                    </h4> <div class="box-body table-responsive no-padding">
   <table class="table table-hover">
                            <tr>
                                <th>序号</th>
                                <th>患者姓名</th>   
                                <th>患者手机</th>                             
                                <th>患者性别</th>
                                <th>操作</th>
                            </tr>

@foreach (var item in Model)
            {
                            <tr>
                                <td>@item.UserId</td>
                                <td>@item.UserName</td>
                                <td>@item.UserTel</td>
                           
                                <td>@item.UserSex </td>
                                <td>编辑，删除</td>
                              
                            </tr>
}

                           
                        </table>
                    </div><!-- /.box-body -->
                    
                    <div class="box-footer clearfix">
                        <!-- Pagging -->
                        共 @ViewBag.RecordCount 条记录 <div class="SkyPager"></div>
                        <!-- EndPagging -->
                    </div>
                        
                    
                </div><!-- /.box -->
            </div>
        </div><!-- /.row (main row) -->

    </section><!-- /.content -->
</aside>

    <!-- jQuery 2.0.2 -->

<script src="/js/jquery-confirm.js"></script>
<script src="/js/JSsite.js" type="text/javascript"></script>
<script src="/js/jquery.pager.js" type="text/javascript"></script>
@section JsBottom{

    <script type="text/javascript">

        var pageNo = @ViewBag.PageNo;
        var pageCount = @ViewBag.PageCount;
        var RecordCount=@ViewBag.RecordCount;

        $(function() {
           
            if (pageCount == 0) {
                 $(".SkyPager").hide();
                
            }
            $(".SkyPager").pager({ pagenumber: pageNo, pagecount: pageCount, buttonClickCallback: PageClick });
        });

        PageClick = function(no) {
            window.location = "?p=" + no;
        }


        function GuahaoPay(guahaoId,value) {
            var table="QxsqGuahao";
            var strwhere="GuahaoId="+guahaoId;
            var columnname="GuahaoStatus";
            var columnvalue=value;
            var url = '@Url.Action("SetModelByAjax", "Guahao")?table='+table+'&strwhere='+strwhere+'&columnname='+columnname+"&columnvalue="+columnvalue;
            
            
            $.getJSON(url, function(data) {

                window.location.reload();
            });
        
        }
        function DeleteGuahao(id){
            $.confirm({
                title: '确认删除!',
                content: '你确定要删除吗？!',
                confirmButton:'确定删除',
                cancelButton:'我后悔了',
                confirm: function(){
                    //alert('Confirmed!');
                    window.location = "/Guahao/GuahaoDelete?GuahaoId="+id ;
                },
                cancel: function(){
                    
                }
            });
        
        }

    </script>



}